---
import { Picture } from "@astrojs/image/components";
import landing00 from "assets/00-saskatoon00.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<style>
  .banner {
    position: relative;
    width: 100%;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background-image: url('../assets/00-saskatoon00.jpg');
    background-size: cover;
    background-position: center;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    margin-left: 3rem;
  }

  /* Add this for the sliding effect */
  .sliding-effect {
    animation: slide 20s infinite;
  }

  @keyframes slide {
    0%, 20% {
      background-image: url('../assets/00-saskatoon00.jpg');
    }
    40%, 60% {
      background-image: url('../assets/01-saskatoon01.jpg');
    }
    80%, 100% {
      background-image: url('../assets/02-saskatoon02.jpg');
    }
  }
</style>

<main>
  <div class="banner sliding-effect">
    <div class="overlay"></div>
    <div class="content">
      <h1 
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-white"
      style="margin-bottom: 10%;"
      >
        Red Ant HVAC
      </h1>
      <p class="text-2xl lg:text-3xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter text-white">
        <span class="text-3xl lg:text-4xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter text-white">
          Proudly Servicing Saskatoon and Area
        </span>
        </p>
    </div>
  </div>
  <div class="photo-credit">
    <p class="text-xs text-gray-500 flex gap-1 ">
      <Icon name="ic:baseline-photo-camera" class="w-4 h-4" />
      <span id="photo-credit">
        Photo by <a href="https://unsplash.com/@joshuaryanphoto?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Joshua Reddekopp</a> on <a href="https://unsplash.com/photos/wRrQxcGMtDE?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Unsplash</a>
      </span>
    </p>
  </div>
</main>
