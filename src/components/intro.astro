---
import { Picture } from "@astrojs/image/components";
import chillImage from "/src/assets/webp/03-sketch00.webp";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 mb-12">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={chillImage}
      alt="an astronaut lounging in a tropical resort in space, vaporwave"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
    <div class="photo-credit">
      <p class="text-xs text-gray-500 flex gap-1 ">
        <Icon name="ic:baseline-photo-camera" class="w-4 h-4" />
        <span id="photo-credit">
          Art by DALL-E2
        </span>
      </p>
    </div>
  </div>
  <div class="m-3">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Make Every Zone Your Comfort Zone
    </h1>
    <h2 class="text-4xl lg:text-5xl xl:text-6xl font-semibold lg:tracking-tight xl:tracking-tighter mt-4">
      Affordable Comfort for Every Home
    </h2>
    <p
      class="text-lg mt-4 text-slate-600 max-w-xl"
      style="color:cornsilk">
      Our HVAC services provide the perfect balance of affordability and comfort, ensuring a cozy atmosphere in your home without breaking the bank.
    </p>
    <p class="text-md mt-4 text-slate-600 max-w-xl" style="color: azure;">
      We also offer business solutions for refrigeration and cooling services.
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/contact"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bi:chat-right-quote" />
        Get a Quote
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/blog"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bi:newspaper" />
        Read Our Blogs
      </Link>
    </div>
  </div>
</main>
